{
	"name": "git-detect-case-change",
	"version": "0.0.0-semantic-release",
	"description": "Detect file name case changes in a Git repository",
	"keywords": [
		"git",
		"detect",
		"case change",
		"case sensitive",
		"rename",
		"move"
	],
	"license": "MIT",
	"repository": "privatenumber/git-detect-case-change",
	"funding": "https://github.com/privatenumber/git-detect-case-change?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"type": "module",
	"files": [
		"dist"
	],
	"bin": "dist/index.cjs",
	"scripts": {
		"prepare": "simple-git-hooks",
		"build": "pkgroll --minify",
		"lint": "eslint .",
		"type-check": "tsc --noEmit",
		"prepack": "pnpm build && clean-pkg-json"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts}": "eslint"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.33.0",
		"@types/node": "^18.11.18",
		"clean-pkg-json": "^1.2.0",
		"cleye": "^1.3.1",
		"eslint": "^8.32.0",
		"execa": "^6.1.0",
		"fs.promises.exists": "^1.1.4",
		"lint-staged": "^13.1.0",
		"pkgroll": "^1.8.1",
		"simple-git-hooks": "^2.8.1",
		"typescript": "^4.9.4"
	},
	"eslintConfig": {
		"extends": "@pvtnbr"
	}
}
